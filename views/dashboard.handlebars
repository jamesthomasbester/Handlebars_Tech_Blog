<div>
  <form class="post">
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Title</label>
      <div class="col-sm-10">
        <input type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Title">
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Content</label>
      <div class="col-sm-10">
        <input type="text" class="form-control form-control-sm" id="colFormLabelSm" placeholder="Content">
      </div>
    </div>
    <button class="btn btn-outline-secondary" id="submit-post" type="button">Submit</button>
  </form>
</div>
